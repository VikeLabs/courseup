{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dev": "concurrently \"FIRESTORE_EMULATOR_HOST=localhost:8080 nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "build:routes": "tsoa spec-and-routes && tsc",
    "start:server": "node build/src/server.js",
    "db:populate": "ts-node scripts/populate-courses.ts",
    "db:start": "firebase emulators:start --only firestore --project development --import=tmp/firestore --export-on-exit",
    "postinstall": "node scripts/setup.js"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "@vikelabs/uvic-course-scraper": "^1.0.0-alpha.2",
    "async": "^3.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.5.0",
    "firebase-functions": "^3.13.2",
    "tsoa": "^3.7.0",
    "typesaurus": "^7.1.0"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "@types/async": "^3.2.6",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^10.17.55",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.21.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.3.1",
    "firebase-functions-test": "^0.2.0",
    "jest": "^27.0.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.2"
  },
  "private": true
}
